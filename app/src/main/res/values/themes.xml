<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RememberU" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/MyTextView</item>
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="android:editTextStyle">@style/MyEditText</item>
        <item name="android:radioButtonStyle">@style/MyRadioButton</item>
        <item name="android:checkboxStyle">@style/MyCheckBox</item>

        <!-- Activity Animation -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowHideAnimation">@null</item>
        <item name="android:windowShowAnimation">@null</item>
    </style>

</resources>