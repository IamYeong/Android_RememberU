<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/layout_memo_bookmark_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="180dp"


    android:background="@drawable/item_card"
    android:backgroundTint="@color/accent"

    android:layout_marginEnd="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/tv_title_bookmark_memo_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:text="TITLE"

        />

    <TextView
        android:id="@+id/tv_create_date_bookmark_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title_bookmark_memo_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="10sp"

        />

    <TextView
        android:id="@+id/tv_content_bookmark_memo_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        android:layout_marginTop="5dp"

        android:maxLines="5"
        />


</androidx.constraintlayout.widget.ConstraintLayout>